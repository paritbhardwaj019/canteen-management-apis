{
  "name": "canteen-management-api",
  "version": "1.0.0",
  "description": "Canteen Management System API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:docker": "npx prisma migrate deploy && node server.js",
    "prod": "pm2 start server.js --name \"canteen-api\"",
    "prod:stop": "pm2 stop canteen-api",
    "prod:restart": "pm2 restart canteen-api",
    "prod:status": "pm2 status",
    "prod:logs": "pm2 logs canteen-api",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "docker:build": "docker build -t canteen-api .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:mysql": "docker-compose exec mysql mysql -u canteen -pcanteenpassword canteen",
    "docker:restart": "docker-compose restart",
    "test": "jest --detectOpenHandles"
  },
  "keywords": [
    "canteen",
    "meal",
    "management",
    "api",
    "nodejs",
    "prisma",
    "mysql"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.3",
    "pm2": "^5.3.1",
    "qrcode": "^1.5.4",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0"
  }
}
